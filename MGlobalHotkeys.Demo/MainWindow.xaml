<Window
    x:Class="MGlobalHotkeys.Demo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MGlobalHotkeys.Demo"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wpf="clr-namespace:MGlobalHotkeys.WPF;assembly=MGlobalHotkeys.WPF"
    Title="MainWindow"
    Width="500"
    Height="300"
    Background="LightGray"
    FontSize="32"
    mc:Ignorable="d">
    <Grid Background="#50ff0000">
        <Border
            Margin="10"
            HorizontalAlignment="Center"
            VerticalAlignment="Top">

            <wpf:HotkeyPicker
                Padding="6,2"
                BorderThickness="2"
                CornerRadius="6"
                Foreground="White"
                Hotkey="{Binding GlobalHotkey}"
                SelectionBrush="Red" />
        </Border>
    </Grid>
</Window>
